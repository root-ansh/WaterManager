<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="true"
    android:fillViewport="true"
    android:paddingStart="16dp"
    android:paddingTop="72dp"
    android:paddingEnd="16dp"

    tools:ignore="HardcodedText"

    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animationCache="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:animationCache="true"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">

            <LinearLayout
                android:id="@+id/stf_layout_about"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"

                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#E8FBFF"

                    android:padding="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_logo"

                    tools:ignore="ContentDescription" />

                <LinearLayout

                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:animationCache="true"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="About Water Manager"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Click For Licenses, credits and other info."

                        android:textColor="@color/black"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:animationCache="true"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">

            <LinearLayout
                android:id="@+id/stf_layout_gender"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"

                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#E8FBFF"

                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_container_cup_colored"

                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:animationCache="true"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Gender"
                        android:textColor="@color/black"

                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/stf_tv_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black"

                        android:textSize="12sp"
                        tools:text="male" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:animationCache="true"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">

            <LinearLayout
                android:id="@+id/stf_layout_weight"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:animationCache="true"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"

                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#E8FBFF"

                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_container_bottle_colored"

                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:animationCache="true"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Weight"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/stf_tv_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"

                        tools:text="512 kg" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:animationCache="true"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">

            <LinearLayout
                android:id="@+id/stf_layout_activity"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:animationCache="true"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"

                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#E8FBFF"

                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_container_glass_colored"

                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:animationCache="true"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Your Daily Activity"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/stf_tv_activity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="Moderate" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:animationCache="true"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">

            <LinearLayout
                android:id="@+id/stf_layout_intake"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"

                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"

                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"

                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#E8FBFF"

                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_container_big_bottle_colored"

                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:animationCache="true"


                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Water Intake"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Recommended intake based on the above values. Tap to edit."
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/stf_tv_intake"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="Moderate" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:animationCache="true"
            app:cardElevation="4dp"

            app:cardMaxElevation="4dp">

            <LinearLayout
                android:id="@+id/stf_layout_daily_notif"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"

                android:orientation="horizontal"


                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"

                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#E8FBFF"

                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_container_thermos_colored"

                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:animationCache="true"


                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Daily Notifications"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/stf_tv_daily_notif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Show notification reminder to drink water every few hours is OFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <Switch
                    android:id="@+id/stf_sw_daily_notif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"

                    android:focusable="false"
                    android:padding="8dp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/stf_fl_ladder"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="-16dp"

            android:animationCache="true"

            >

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/bg_squiricle_white"
                android:elevation="4dp"
                tools:backgroundTint="@color/colorAccent" />

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/bg_squiricle_white"
                android:elevation="4dp"
                tools:backgroundTint="@color/colorAccent" />

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:animationCache="true"

            app:cardElevation="4dp"

            app:cardMaxElevation="4dp">


            <LinearLayout
                android:id="@+id/stf_layout_sleep_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#E8FBFF"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_container_thermos_colored"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:animationCache="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="Sleep time"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="No notifications will be shown AFTER this time"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/stf_tv_sleep_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="12:26 PM" />


                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:id="@+id/stf_fl_ladder2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="-16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="-16dp"
            android:animationCache="true"

            >

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@drawable/bg_squiricle_white"
                android:elevation="4dp"
                tools:backgroundTint="@color/colorAccent" />

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/bg_squiricle_white"
                android:elevation="4dp"
                tools:backgroundTint="@color/colorAccent" />

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:animationCache="true"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp">

            <LinearLayout
                android:id="@+id/stf_layout_wakeup_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animationCache="true"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_white"
                    android:backgroundTint="#E8FBFF"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_container_thermos_colored"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:animationCache="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="WakeUp time"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:text="No notifications will be shown BEFORE this time"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/stf_tv_wakeup_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:text="12:26 PM" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>