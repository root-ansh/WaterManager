<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:background="@color/blue_accent2"
    android:orientation="vertical"
    tools:ignore="HardcodedText,LabelFor,UnusedAttribute">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:padding="8dp"
        android:text="Recommended Daily Intake for you is :"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <in.curioustools.water_reminder.ui.custom.wave_loader.WaveLoadingView
        android:id="@+id/wave_loader_dialog"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"

        android:layout_margin="36dp"
        app:wlv_borderWidth="0dp"
        app:wlv_progressValue="4"

        app:wlv_shapeType="circle"
        app:wlv_triangle_direction="north"
        app:wlv_waveAmplitude="30"
        app:wlv_waveColor="@color/white" />



    <EditText
        android:id="@+id/et_water_amount_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_margin="8dp"
        android:background="@drawable/bg_squiricle_white_border"
        android:drawableStart="@drawable/ic_pencil_white"

        android:drawableEnd="@drawable/ic_ml"

        android:drawablePadding="16dp"
        android:importantForAutofill="no"

        android:inputType="numberDecimal"
        android:maxLength="4"
        android:padding="16dp"
        android:text="2600"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold" />


</LinearLayout>